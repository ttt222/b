<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/gray_f6">
    
    <ImageView android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/icon_my_circle"/>

    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="5dp"
    	android:orientation="vertical">
    	
        <TextView android:id="@+id/event_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_b9"
            android:textSize="12sp"
            android:text="前天"/>
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@color/white" >

            <LinearLayout android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView android:id="@+id/event_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夏日还宅在家了吗？炎炎夏日，赶紧出门收货美好的风景吧。。。。"
                    android:textColor="@color/gray_b9"
                    android:textSize="12sp" />

                <TextView android:id="@+id/event_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已结束"
                    android:textColor="@color/red_event"
                    android:textSize="12sp" />
            </LinearLayout>
            
            <ImageView android:id="@+id/event_type_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
